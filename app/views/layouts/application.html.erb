<!DOCTYPE html>
<html>
  <head>
    <title>Penblades</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light flex">
      <a class="navbar-brand" href="/">
        <%= image_tag("Penblade-Logo.svg", class: 'penblade-logo') %>
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse nav-right" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item spacing">
            <a class="nav-link blue" href="/features">Features</a>
          </li>
          <li class="nav-item spacing">
            <a class="nav-link blue" href="/ordering">Ordering</a>
          </li>
          <li class="nav-item spacing">
            <a class="nav-link blue" href="/resources">Resources</a>
          </li>
          <li class="nav-item spacing">
            <a class="nav-link btn purple" href="#">Request Samples</a>
          </li>
        </ul>
      </div>
    </nav>
    <%= yield %>
    <nav class="navbar navbar-expand-lg navbar-light bg-light flex">
      <div class="navbar" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link black" href="/features">Features</a>
          </li>
          <li class="nav-item">
            <a class="nav-link black" href="/ordering">Ordering</a>
          </li>
          <li class="nav-item">
            <a class="nav-link black" href="/resources">Resources</a>
          </li>
          <li class="nav-item">
            <a class="nav-link black" href="#">Contact Us</a>
          </li>
          <li class="nav-item">
            <a class="nav-link black" href="#">Careers</a>
          </li>
        </ul>
      </div>
    </nav>
  </body>
</html>
